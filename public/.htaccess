RewriteEngine On

# Redirect to index.php if the file/directory doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# SiteGround requires explicit PHP handler per .htaccess
# This line is necessary to manually select a PHP version on SiteGround
AddHandler application/x-httpd-php85 .php .php5 .php4 .php3
